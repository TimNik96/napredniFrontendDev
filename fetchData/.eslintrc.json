{
    "env": {
        "browser": true,
        "es2021": true
    },
    "ignorePatterns": ["webpack.config.js", "node_modules/", "dist/"],
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-console": ["error", { "allow": ["warn", "error"] }],
        "no-multiple-empty-lines": ["error", { "max": 1, "maxEOF": 1 }],
        "no-unused-vars": [
            "error",
            {
                "vars": "local",
                "args": "all",
                "ignoreRestSiblings": false
            }
        ],
        "quotes": ["error", "double"]
    }
}
